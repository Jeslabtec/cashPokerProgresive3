<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.progresive.user.cashpokerprogresive.tablero">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/tablero">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:visibility="gone">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="1dp"
                android:layout_height="23dp"
                android:text="@string/dummy_button"
                android:visibility="gone"
                android:enabled="false" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="579dp"
            android:layout_gravity="left|top"
            android:touchscreenBlocksFocus="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/progressive"
                android:id="@+id/lblProgressive"
                android:layout_marginTop="216dp"
                android:textSize="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cero"
                android:id="@+id/tvJugador7"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_alignBottom="@+id/lblProgressive"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true"
                android:textSize="40sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cero"
                android:id="@+id/tvJugador6"
                android:layout_below="@+id/tvJugador7"
                android:layout_toRightOf="@+id/tvJugador7"
                android:layout_toEndOf="@+id/tvJugador7"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true"
                android:textSize="40sp" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cero"
                android:id="@+id/tvJugador5"
                android:layout_below="@+id/tvJugador6"
                android:layout_toRightOf="@+id/tvJugador6"
                android:layout_toEndOf="@+id/tvJugador6"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true"
                android:textSize="40sp" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cero"
                android:id="@+id/tvJugador4"
                android:layout_marginTop="24dp"
                android:layout_alignTop="@+id/tvJugador5"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true"
                android:textSize="40sp" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cero"
                android:id="@+id/tvJugador3"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:layout_alignTop="@+id/tvJugador5"
                android:layout_toRightOf="@+id/tvJugador4"
                android:layout_toEndOf="@+id/tvJugador4"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true"
                android:textSize="40sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cero"
                android:id="@+id/tvJugador2"
                android:layout_toRightOf="@+id/tvJugador3"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true"
                android:textSize="40sp"
                android:layout_above="@+id/tvJugador3" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cero"
                android:id="@+id/tvJugador1"
                android:layout_alignTop="@+id/tvJugador7"
                android:layout_toRightOf="@+id/tvJugador2"
                android:layout_toEndOf="@+id/tvJugador2"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1000000"
                android:id="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="70sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Apostemos"
                android:id="@+id/TextviewAviso"
                android:textSize="50sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/textView7"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="386dp"
            android:layout_height="86dp"
            android:layout_gravity="left|bottom">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Apuesta1"
                android:id="@+id/tvPremioApuesta1"
                android:background="@drawable/coins"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="40sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Apuesta2"
                android:id="@+id/tvPremioApuesta2"
                android:background="@drawable/coins"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Apuesta3"
                android:id="@+id/tvPremioApuesta3"
                android:background="@drawable/coins"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Apuesta4"
                android:id="@+id/tvPremioApuesta4"
                android:background="@drawable/coins"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Apuesta5"
                android:id="@+id/tvPremioApuesta5"
                android:background="@drawable/coins"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Apuesta6"
                android:id="@+id/tvPremioApuesta6"
                android:background="@drawable/coins"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="353dp"
            android:layout_height="85dp"
            android:layout_gravity="right|bottom">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Pagar"
                android:id="@+id/tvPagar"
                android:clickable="true" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Apostar"
                android:id="@+id/tvApostar" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Jugar"
                android:id="@+id/tvJugar" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Retirarse"
                android:id="@+id/tvRetiroTotal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal|bottom">

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
