<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.progresive.user.cashpokerprogresive.tablero">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/tablero">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:text="@string/dummy_button"
                android:visibility="invisible"
                android:enabled="false" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="579dp"
            android:layout_gravity="left|top"
            android:touchscreenBlocksFocus="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="progressive"
                android:id="@+id/lblProgressive"
                android:layout_marginTop="216dp"
                android:textSize="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/tvJugador7"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_alignBottom="@+id/lblProgressive"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/tvJugador6"
                android:layout_below="@+id/tvJugador7"
                android:layout_toRightOf="@+id/tvJugador7"
                android:layout_toEndOf="@+id/tvJugador7"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/tvJugador5"
                android:layout_below="@+id/tvJugador6"
                android:layout_toRightOf="@+id/tvJugador6"
                android:layout_toEndOf="@+id/tvJugador6"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/tvJugador4"
                android:layout_marginTop="24dp"
                android:layout_alignTop="@+id/tvJugador5"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/tvJugador3"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:layout_alignTop="@+id/tvJugador5"
                android:layout_toRightOf="@+id/tvJugador4"
                android:layout_toEndOf="@+id/tvJugador4"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/tvJugador2"
                android:layout_above="@+id/tvJugador4"
                android:layout_toRightOf="@+id/tvJugador3"
                android:layout_toEndOf="@+id/tvJugador3"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/tvJugador1"
                android:layout_alignTop="@+id/tvJugador7"
                android:layout_toRightOf="@+id/tvJugador2"
                android:layout_toEndOf="@+id/tvJugador2"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView7"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="70dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="657dp"
            android:layout_height="86dp"
            android:layout_gravity="left|bottom">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvPremioApuesta1" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvPremioApuesta2" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvPremioApuesta3" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvPremioApuesta4" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvPremioApuesta5" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvPremioApuesta6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="263dp"
            android:layout_height="85dp"
            android:layout_gravity="right|bottom">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvPagar" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvApostar" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvJugar" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvRetiroTotal" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
