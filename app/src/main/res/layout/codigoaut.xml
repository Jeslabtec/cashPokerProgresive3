<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:touchscreenBlocksFocus="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:id="@+id/num2"
            android:layout_marginTop="50dp"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:id="@+id/num5"
            android:layout_marginTop="50dp"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_below="@+id/num2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            android:id="@+id/num8"
            android:layout_marginTop="50dp"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_below="@+id/num5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:id="@+id/num0"
            android:layout_marginTop="50dp"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_below="@+id/num8"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:id="@+id/num1"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"
            android:layout_above="@+id/num5"
            android:layout_toLeftOf="@+id/num2"
            android:layout_toStartOf="@+id/num2" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:id="@+id/num3"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:layout_alignTop="@+id/num2"
            android:layout_toRightOf="@+id/num2"
            android:layout_toEndOf="@+id/num2" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:id="@+id/num4"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_alignTop="@+id/num5"
            android:layout_alignLeft="@+id/num1"
            android:layout_alignStart="@+id/num1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:id="@+id/num6"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_alignTop="@+id/num5"
            android:layout_alignLeft="@+id/num3"
            android:layout_alignStart="@+id/num3" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            android:id="@+id/num7"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_alignTop="@+id/num8"
            android:layout_alignRight="@+id/num4"
            android:layout_alignEnd="@+id/num4" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            android:id="@+id/num9"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_alignTop="@+id/num8"
            android:layout_alignLeft="@+id/num6"
            android:layout_alignStart="@+id/num6" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="OK"
            android:id="@+id/okTV"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_alignTop="@+id/num0"
            android:layout_alignLeft="@+id/num9"
            android:layout_alignStart="@+id/num9"
            android:background="#6eac48" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/coding"
            android:textSize="60dp"
            android:layout_above="@+id/num5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#eae2e2" />
    </RelativeLayout>
</LinearLayout>
